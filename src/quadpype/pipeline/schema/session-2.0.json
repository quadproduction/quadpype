{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "title": "quadpype:session-2.0",
    "description": "The QuadPype environment",

    "type": "object",

    "additionalProperties": true,

    "required": [
        "QUADPYPE_PROJECT_NAME",
        "QUADPYPE_ASSET_NAME",
        "QUADPYPE_CONFIG"
    ],

    "properties": {
        "QUADPYPE_PROJECT_NAMES": {
            "description": "Absolute path to root of project directories",
            "type": "string",
            "example": "/nas/projects"
        },
        "QUADPYPE_PROJECT_NAME": {
            "description": "Name of project",
            "type": "string",
            "pattern": "^\\w*$",
            "example": "Hulk"
        },
        "QUADPYPE_ASSET_NAME": {
            "description": "Name of asset",
            "type": "string",
            "pattern": "^\\w*$",
            "example": "Bruce"
        },
        "QUADPYPE_SILO": {
            "description": "Name of asset group or container",
            "type": "string",
            "pattern": "^\\w*$",
            "example": "assets"
        },
        "QUADPYPE_TASK_NAME": {
            "description": "Name of task",
            "type": "string",
            "pattern": "^\\w*$",
            "example": "modeling"
        },
        "QUADPYPE_CONFIG": {
            "description": "Name of QuadPype configuration",
            "type": "string",
            "pattern": "^\\w*$",
            "example": "polly"
        },
        "QUADPYPE_HOST_NAME": {
            "description": "Name of application",
            "type": "string",
            "pattern": "^\\w*$",
            "example": "maya2016"
        },
        "QUADPYPE_PROJECTS_DB_NAME": {
            "description": "Name of the projects database",
            "type": "string",
            "pattern": "^\\w*$",
            "example": "quadpype_projects",
            "default": "quadpype_projects"
        },
        "QUADPYPE_LABEL": {
            "description": "Nice name for the program, used in e.g. graphical user interfaces",
            "type": "string",
            "example": "QuadPype",
            "default": "QuadPype"
        },
        "QUADPYPE_SENTRY": {
            "description": "Address to Sentry",
            "type": "string",
            "pattern": "^http[\\w/@:.]*$",
            "example": "https://5b872b280de742919b115bdc8da076a5:8d278266fe764361b8fa6024af004a9c@logs.mindbender.com/2",
            "default": null
        },
        "QUADPYPE_DEADLINE": {
            "description": "Address to Deadline",
            "type": "string",
            "pattern": "^http[\\w/@:.]*$",
            "example": "http://192.168.99.101",
            "default": null
        },
        "QUADPYPE_DB_TIMEOUT": {
            "description": "Wherever there is a need for a timeout, this is the default value.",
            "type": "string",
            "pattern": "^[0-9]*$",
            "default": "1000",
            "example": "1000"
        },
        "QUADPYPE_UPLOAD": {
            "description": "Boolean of whether to upload published material to central asset repository",
            "type": "string",
            "default": null,
            "example": "True"
        },
        "QUADPYPE_USERNAME": {
            "description": "Generic username",
            "type": "string",
            "pattern": "^\\w*$",
            "default": "jdoe",
            "example": "jdoe"
        },
        "QUADPYPE_PASSWORD": {
            "description": "Generic password",
            "type": "string",
            "pattern": "^\\w*$",
            "default": "secret",
            "example": "abc123"
        },
        "QUADPYPE_INSTANCE_ID": {
            "description": "Unique identifier for instances in a working file",
            "type": "string",
            "pattern": "^[\\w.]*$",
            "default": "quadpype.instance",
            "example": "quadpype.instance"
        },
        "QUADPYPE_CONTAINER_ID": {
            "description": "Unique identifier for a loaded representation in a working file",
            "type": "string",
            "pattern": "^[\\w.]*$",
            "default": "quadpype.container",
            "example": "quadpype.container"
        },
        "QUADPYPE_DEBUG": {
            "description": "Enable debugging mode. Some applications may use this for e.g. extended verbosity or mock plug-ins.",
            "type": "string",
            "default": null,
            "example": "True"
        }
    }
}
